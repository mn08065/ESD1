@model LibraryManagementSystem.ViewModels.BookViewModel
@{
    Layout = "_Layout";
}

<h1>Update Book</h1>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" /> <!-- This was missing! -->
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ISBN" class="control-label"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Authors</label>
        <div>
            @if (Model.AvailableAuthors != null && Model.AvailableAuthors.Any())
            {
                @foreach (var author in Model.AvailableAuthors)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedAuthorIds" value="@author.Id" 
                               id="author-@author.Id" @(Model.SelectedAuthorIds != null && Model.SelectedAuthorIds.Contains(author.Id) ? "checked" : "")>
                        <label class="form-check-label" for="author-@author.Id">
                            @author.Name
                        </label>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No authors available.</p>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}