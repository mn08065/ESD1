@model IEnumerable<LibraryManagementSystem.Domain.Loan>
@{
    Layout = "_Layout";
}

<h1>Loaned Books</h1>

<p>
    <a asp-action="LoanBookForm" class="btn btn-primary">Loan a New Book</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Book Title</th>
        <th>Member Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var loan in Model)
    {
        <tr>
            <td>@loan.Book.Title</td>
            <td>@loan.Member.Name</td>
            <td>
                <form asp-action="ReturnBook" asp-route-loanId="@loan.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Return</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>